{
  "manifest_version": 3,
  "name": "Herder",
  "version": "2.0.0",
  "permissions": [
    "sidePanel",
    "storage",
    "tabs",
    "activeTab",
    "desktopCapture",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://*.supabase.co/*"
  ],
  "side_panel": { "default_path": "sidepanel.html" },
  "background": { "service_worker": "background.js" },
  "action": { "default_title": "Open Reporter" }
}