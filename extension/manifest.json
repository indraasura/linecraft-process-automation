{
  "manifest_version": 3,
  "name": "Trello Bug Reporter Pro",
  "version": "1.5.0",
  "description": "One-click bug reporting with full-screen video and image capture.",
  "permissions": [
    "sidePanel",
    "storage",
    "tabs",
    "activeTab",
    "desktopCapture"
  ],
  "host_permissions": ["<all_urls>"],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open Reporter"
  },
  "background": {
    "service_worker": "background.js"
  }
}